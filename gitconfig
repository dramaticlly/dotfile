# Include .gitconfig with different email for work directory
[includeIf "gitdir:~/workspace/github.com/"]
    path = ~/workspace/github.com/.gitconfig

# rewrite ssh and https urls to use the custom ssh key
[url "github-oss.com:apache/"]
    insteadOf = git@github.com:apache/
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
[url "ssh://git@github.com-oss/polaris-catalog"]
    insteadOf = https://github.com/polaris-catalog
